---
pagination:
  data: config.languages
  size: 1
  alias: lang
permalink: "/{{ lang }}/latest.json"
eleventyExcludeFromCollections: true
---
[
{%- for item in collections['posts_' + lang] | reverse | limit(5) -%}
  {
    "url": "{{config.url}}{{ item.url }}",
    "title": "{{ item.data.title.trim() | removeQuotes }}",
    "description": "{{ item.data.description.trim() | removeQuotes }}",
    "date": "{{ item.date.toISOString() }}",
    "imageSmall": "{{config.url}}{{ item.data.featuredImageSmall }}",
    "imageMedium": "{{config.url}}{{ item.data.featuredImageMedium }}"
  }{% if not loop.last %},{% else %}{%- endif -%}
{%- endfor -%}
]