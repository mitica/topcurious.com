---
layout: index_layout.njk
title: {{ config.it.title }}
description: {{ config.it.description }}
eleventyExcludeFromCollections: true
pagination:
  data: collections.posts_it
  size: 9
---

<section class="section is-flex-grow-1">
  <div class="container">

    <div class="columns is-variable is-5-desktop is-multiline is-mobile">
      {% for item in pagination.items | reverse %}
        <div class="column is-one-third-tablet is-full-mobile mb-5">
          {% include "card.njk" %}
        </div>
      {% endfor %}
    </div>

    <div class="columns">
      <div class="column has-text-centered">
        {% include "pagination.njk" %}
      </div>
    </div>

  </div>
</section>
